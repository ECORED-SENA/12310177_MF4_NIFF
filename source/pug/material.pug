include mixins/functions

doctype
html(lang="es")
    head
        include includes/head.pug


    body#page-home.theme-dark.page-header-textura

        header#CursoPresentacion.curso-presentacion.page-header
            .page-textura
                .container

                    include includes/page-home_topbar.pug

                    +pageHeader("Tema", "assets/images/header/header_media.svg", "")   

        section#ResultadosAprendizaje.curso-resultados.section.bg-base-light

            .container

                include includes/page-home_resultados.pug  

        section#IndiceTematico.curso-indice-tematico.section

            .container

                h2 Desarrollo de <br>contenidos
                .brand-line-primary

                .row.justify-content-center
                    .col-12.col-sm-10
                        .card.wow.flipInX(data-wow-delay=".4s")
                            .card-body
                                ul.list-group.list-group-flush.list.my-n3.nav-temas
                                    +navTemaItem('play', 'Introducción', '#introduccion')
                                    +navTemaItem('1', 'Aplicación por primera vez de la norma de información financiera para microempresas', '#tema-1')
                                    +navTemaItem('2', 'Procedimientos para preparar los estados financieros en la fecha de transición', '#tema-2')
                                    +navTemaItem('3', 'Revelación de la transición a la norma de información financiera para las microempresas', '#tema-3')
                                    +navTemaItem('4', 'Validar el registro de la información contable según la norma de información financiera para microempresas', '#tema-4')
                                    +navTemaItem('5', 'Emitir los reportes y los estados financieros según la norma de información financiera', '#tema-5')
                                    +navTemaItem('question', 'Actividad didáctica', '#evaluacion')
                                    +navTemaItem('glosary', 'Glosario', '#glosario')
                                    +navTemaItem('folder', 'Material complementario', '#anexos')
                                    +navTemaItem('references', 'Referencias bibliográficas', '#referencias')


        section#mainContent         
            #introduccion
                include pages/intro.pug
            #tema-1
                include pages/1-tema.pug
            #tema-2
                include pages/2-tema.pug
            #tema-3
                include pages/3-tema.pug
            #tema-4
                include pages/4-tema.pug
            #tema-5
                include pages/5-tema.pug
            #evaluacion
                include pages/actividad-1.pug
            #glosario
                include pages/glosario.pug
            #anexos
                include pages/material-complementario.pug
            #referencias
                include pages/referencias.pug


        +creditosFooter("assets/images/logos/senaLogo.svg")


        a.scroll-to-top-btn
            .fa.fa-angle-up.fa-2x

        script(src="assets/js/vendor.js")
        script(src="js/local.js")





